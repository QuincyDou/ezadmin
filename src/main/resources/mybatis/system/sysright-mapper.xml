<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="com.ez.system.dao.SysRightDao">

	<resultMap id="SysRight" type="com.ez.system.entity.SysRight">
        <result property="uid" column="U_ID"/>
        <result property="c1" column="C1"/>
        <result property="c2" column="C2"/>
        <result property="c3" column="C3"/>
        <result property="c4" column="C4"/>
        <result property="q1" column="Q1"/>
        <result property="q2" column="Q2"/>
        <result property="q3" column="Q3"/>
        <result property="q4" column="Q4"/>
	</resultMap>

	<sql id="selectId">
		U_ID,
C1,
C2,
C3,
C4,
Q1,
Q2,
Q3,
Q4
    </sql>
    
    <select id="findAll" resultMap="SysRight">
		select
		<include refid="selectId" />
		from sys_right
	</select>
	
	<select id="queryAll" resultMap="SysRight" parameterType="com.ez.system.entity.SysRight">
		select
		<include refid="selectId" />
		from sys_right
		<include refid="querywhere1"/>
		<if test="@Ognl@isNotEmpty(sort) and @Ognl@isNotEmpty(direction)">
		 order by ${sort} ${direction}
		</if>
	</select>

	<select id="query" resultMap="SysRight" parameterType="java.util.HashMap">
		select
		<include refid="selectId" />
		from sys_right
		<include refid="querywhere"/>
		<if test="@Ognl@isNotEmpty(t.sort) and @Ognl@isNotEmpty(t.direction)">
		 order by ${t.sort} ${t.direction}
		</if>
	</select>
	
	<sql id="querywhere">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>	      				
		       <if test="@Ognl@isNotEmpty(t.c1)">
					AND C1 = '${t.c1}'
			   </if>
		       <if test="@Ognl@isNotEmpty(t.c2)">
					AND C2 = '${t.c2}'
			   </if>
		       <if test="@Ognl@isNotEmpty(t.c3)">
					AND C3 = '${t.c3}'
			   </if>
		       <if test="@Ognl@isNotEmpty(t.c4)">
					AND C4 = '${t.c4}'
			   </if>
		       <if test="@Ognl@isNotEmpty(t.q1)">
					AND Q1 = '${t.q1}'
			   </if>
		       <if test="@Ognl@isNotEmpty(t.q2)">
					AND Q2 = '${t.q2}'
			   </if>
		       <if test="@Ognl@isNotEmpty(t.q3)">
					AND Q3 = '${t.q3}'
			   </if>
		       <if test="@Ognl@isNotEmpty(t.q4)">
					AND Q4 = '${t.q4}'
			   </if>
	       
		</where>
	</sql>
	
		<sql id="querywhere1">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>	      				
		       <if test="@Ognl@isNotEmpty(c1)">
					AND C1 = '${c1}'
			   </if>
		       <if test="@Ognl@isNotEmpty(c2)">
					AND C2 = '${c2}'
			   </if>
		       <if test="@Ognl@isNotEmpty(c3)">
					AND C3 = '${c3}'
			   </if>
		       <if test="@Ognl@isNotEmpty(c4)">
					AND C4 = '${c4}'
			   </if>
		       <if test="@Ognl@isNotEmpty(q1)">
					AND Q1 = '${q1}'
			   </if>
		       <if test="@Ognl@isNotEmpty(q2)">
					AND Q2 = '${q2}'
			   </if>
		       <if test="@Ognl@isNotEmpty(q3)">
					AND Q3 = '${q3}'
			   </if>
		       <if test="@Ognl@isNotEmpty(q4)">
					AND Q4 = '${q4}'
			   </if>
	       
		</where>
	</sql>

	<!-- 总记录数 -->
	<select id="count" parameterType="com.ez.system.entity.SysRight" resultType="int">
		select count(0) from sys_right
		<include refid="querywhere1"/>
	</select>
	
	<!-- 新增 -->
	<insert id="addAll" parameterType="com.ez.system.entity.SysRight">
	<selectKey resultType="java.lang.Integer"  order="AFTER" keyProperty="id" >
        SELECT LAST_INSERT_ID() AS ID   
    </selectKey>
		INSERT INTO sys_right (
        	C1 ,
        	C2 ,
        	C3 ,
        	C4 ,
        	Q1 ,
        	Q2 ,
        	Q3 ,
        	Q4 
        ) VALUES (
        	#{c1} ,
        	#{c2} ,
        	#{c3} ,
        	#{c4} ,
        	#{q1} ,
        	#{q2} ,
        	#{q3} ,
        	#{q4} 
        )
	</insert>
	
	<!-- 新增Selective -->
	<insert id="add" parameterType="com.ez.system.entity.SysRight">
	<selectKey resultType="java.lang.Integer"  order="AFTER" keyProperty="id" >
	        SELECT LAST_INSERT_ID() AS ID
	</selectKey>
		INSERT INTO sys_right 
		<include refid="addtrim"/>
	</insert>
	
	<sql id="addtrim">
	<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="@Ognl@isNotEmpty(c1)">
				C1,
			</if>
			<if test="@Ognl@isNotEmpty(c2)">
				C2,
			</if>
			<if test="@Ognl@isNotEmpty(c3)">
				C3,
			</if>
			<if test="@Ognl@isNotEmpty(c4)">
				C4,
			</if>
			<if test="@Ognl@isNotEmpty(q1)">
				Q1,
			</if>
			<if test="@Ognl@isNotEmpty(q2)">
				Q2,
			</if>
			<if test="@Ognl@isNotEmpty(q3)">
				Q3,
			</if>
			<if test="@Ognl@isNotEmpty(q4)">
				Q4,
			</if>
    </trim>
    <trim prefix=" values (" suffix=")" suffixOverrides="," >
			<if test="@Ognl@isNotEmpty(c1)">
				#{c1},
			</if>
			<if test="@Ognl@isNotEmpty(c2)">
				#{c2},
			</if>
			<if test="@Ognl@isNotEmpty(c3)">
				#{c3},
			</if>
			<if test="@Ognl@isNotEmpty(c4)">
				#{c4},
			</if>
			<if test="@Ognl@isNotEmpty(q1)">
				#{q1},
			</if>
			<if test="@Ognl@isNotEmpty(q2)">
				#{q2},
			</if>
			<if test="@Ognl@isNotEmpty(q3)">
				#{q3},
			</if>
			<if test="@Ognl@isNotEmpty(q4)">
				#{q4},
			</if>
    </trim>
	</sql>
	
	<!-- 删 -->
	<delete id="deleteById" parameterType="String">
		DELETE FROM sys_right WHERE
        U_ID = #{id} 
	</delete>
	
	<!-- 根据主键查实体 -->
	<select id="getById" parameterType="String" resultMap="SysRight">
		SELECT <include refid="selectId" />
		    FROM sys_right 
	        WHERE 
        U_ID = #{id} 
	</select>
	<select id="findByRid" resultMap="SysRight" parameterType="String">
		SELECT
			b.U_ID,
			b.C1,
			b.C2,
			b.C3,
			b.C4,
			b.Q1,
			b.Q2,
			b.Q3,
			b.Q4
		from SYS_ROLE a, SYS_USER_QX b, SYS_USER c
		where
			a.QX_ID = b.U_ID
		and
			a.ROLE_ID = c.ROLE_ID
		and
			c.ROLE_ID =  #{roleId}
		limit 0,1
	</select>

	<!-- 更新all -->
	<update id="updateAll" parameterType="com.ez.system.entity.SysRight">
	    UPDATE sys_right SET
	        C1 = #{c1} ,
	        C2 = #{c2} ,
	        C3 = #{c3} ,
	        C4 = #{c4} ,
	        Q1 = #{q1} ,
	        Q2 = #{q2} ,
	        Q3 = #{q3} ,
	        Q4 = #{q4} 
        WHERE 
	        U_ID = #{uid} 
	</update>
	
	<sql id="updateset">
	<set>
		<if test="@Ognl@isNotEmpty(c1)">
			C1 = #{c1},
		</if>
		<if test="@Ognl@isNotEmpty(c2)">
			C2 = #{c2},
		</if>
		<if test="@Ognl@isNotEmpty(c3)">
			C3 = #{c3},
		</if>
		<if test="@Ognl@isNotEmpty(c4)">
			C4 = #{c4},
		</if>
		<if test="@Ognl@isNotEmpty(q1)">
			Q1 = #{q1},
		</if>
		<if test="@Ognl@isNotEmpty(q2)">
			Q2 = #{q2},
		</if>
		<if test="@Ognl@isNotEmpty(q3)">
			Q3 = #{q3},
		</if>
		<if test="@Ognl@isNotEmpty(q4)">
			Q4 = #{q4},
		</if>
    </set>
	</sql>
	
	<!-- 更新Selective -->
	<update id="modify" parameterType="com.ez.system.entity.SysRight">
	    UPDATE sys_right 
		<include refid="updateset"/>
        WHERE 
	        U_ID = #{uid} 
	</update>
	
	<!-- 查找唯一索引但不是主键的字段Selective -->
	
</mapper>

