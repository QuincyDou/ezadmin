<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="com.ez.cms.dao.CmsImgPositionDao">

	<!-- 以下两个<cache>标签二选一,第一个可以输出日志,第二个不输出日志 -->
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>
	<!--<cache type="org.mybatis.caches.ehcache.EhcacheCache" />-->

	<resultMap id="CmsImgPosition" type="com.ez.cms.entity.CmsImgPosition">
		<result property="positionId" column="position_id"/>
		<result property="positionName" column="position_name"/>
		<result property="positionDesc" column="position_desc"/>
		<result property="inserttime" column="inserttime"/>
		<result property="tag" column="tag"/>
		<result property="positionType" column="position_type"/>
	</resultMap>
	
	<sql id="selectId">
		position_id,
		position_name,
		position_desc,
		inserttime,
	  	tag,
		position_type
    </sql>
    
    <select id="findAll" resultMap="CmsImgPosition">
		select
		<include refid="selectId" />
		from cms_img_position
	</select>
	
	<select id="query" resultMap="CmsImgPosition" parameterType="com.ez.cms.entity.CmsImgPosition">
		select
		<include refid="selectId" />
		from cms_img_position
		<include refid="querywhere"/>
	</select>
	
	<sql id="querywhere">
	<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
	<where>
		<if test="@Ognl@isNotEmpty(positionName)">
			AND position_name like '%${positionName}%'
		</if>
		<if test="@Ognl@isNotEmpty(positionDesc)">
			AND position_desc like '%${positionDesc}%'
		</if>
		<if test="@Ognl@isNotEmpty(inserttimeBegin)">
			AND inserttime &gt;= #{inserttimeBegin}
		</if>
		<if test="@Ognl@isNotEmpty(inserttimeEnd)">
			AND inserttime &lt;= #{inserttimeEnd}
		</if>
		<if test="@Ognl@isNotEmpty(tag)">
			AND tag = '${tag}'
		</if>
		<if test="@Ognl@isNotEmpty(positionType)">
			AND position_type = '${positionType}'
		</if>
	</where>
	</sql>

	<!-- 总记录数 -->
	<select id="count" parameterType="com.ez.cms.entity.CmsImgPosition" resultType="int">
		select count(0) from cms_img_position
		<include refid="querywhere"/>
	</select>
	
	<!-- 新增 -->
	<insert id="addAll" parameterType="com.ez.cms.entity.CmsImgPosition">
		<selectKey resultType="java.lang.Integer"  order="AFTER" keyProperty="positionId" >
			SELECT LAST_INSERT_ID() AS positionId
		</selectKey>
		INSERT INTO cms_img_position (
        	position_name ,
        	position_desc ,
        	inserttime ,
        	tag ,
        	position_type 
        ) VALUES (
        	#{positionName} ,
        	#{positionDesc} ,
        	#{inserttime} ,
        	#{tag} ,
        	#{positionType} 
        )
	</insert>
	
	<!-- 新增Selective -->
	<insert id="add" parameterType="com.ez.cms.entity.CmsImgPosition">
		<selectKey resultType="java.lang.Integer"  order="AFTER" keyProperty="positionId" >
			SELECT LAST_INSERT_ID() AS positionId
		</selectKey>
		INSERT INTO cms_img_position
		<include refid="addtrim"/>
	</insert>
	
	<sql id="addtrim">
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="@Ognl@isNotEmpty(positionName)">
				position_name,
			</if>
			<if test="@Ognl@isNotEmpty(positionDesc)">
				position_desc,
			</if>
			<if test="@Ognl@isNotEmpty(inserttime)">
				inserttime,
			</if>
			<if test="@Ognl@isNotEmpty(tag)">
				tag,
			</if>
			<if test="@Ognl@isNotEmpty(positionType)">
				position_type,
			</if>
		</trim>
		<trim prefix=" values (" suffix=")" suffixOverrides="," >
			<if test="@Ognl@isNotEmpty(positionName)">
				#{positionName},
			</if>
			<if test="@Ognl@isNotEmpty(positionDesc)">
				#{positionDesc},
			</if>
			<if test="@Ognl@isNotEmpty(inserttime)">
				#{inserttime},
			</if>
			<if test="@Ognl@isNotEmpty(tag)">
				#{tag},
			</if>
			<if test="@Ognl@isNotEmpty(positionType)">
				#{positionType},
			</if>
		</trim>
	</sql>
	
	<!-- 删 -->
	<delete id="delete" parameterType="String">
		DELETE FROM cms_img_position WHERE
		position_id = #{id} 
	</delete>
	
	<!-- 根据主键查实体 -->
	<select id="getById" parameterType="String" resultMap="CmsImgPosition">
		SELECT <include refid="selectId" />
		    FROM cms_img_position 
	        WHERE 
        position_id = #{id} 
	</select>
	
	<!-- 更新all -->
	<update id="updateAll" parameterType="com.ez.cms.entity.CmsImgPosition">
	    UPDATE cms_img_position SET
	        position_name = #{positionName} ,
	        position_desc = #{positionDesc} ,
	        inserttime = #{inserttime} ,
	        tag = #{tag} ,
	        position_type = #{positionType} 
        WHERE 
	        position_id = #{positionId} 
	</update>
	
	<sql id="updateset">
	<set>
		<if test="@Ognl@isNotEmpty(positionName)">
			position_name = #{positionName},
		</if>
		<if test="@Ognl@isNotEmpty(positionDesc)">
			position_desc = #{positionDesc},
		</if>
		<if test="@Ognl@isNotEmpty(inserttime)">
			inserttime = #{inserttime},
		</if>
		<if test="@Ognl@isNotEmpty(tag)">
			tag = #{tag},
		</if>
		<if test="@Ognl@isNotEmpty(positionType)">
			position_type = #{positionType},
		</if>
    </set>
	</sql>
	
	<!-- 更新Selective -->
	<update id="modify" parameterType="com.ez.cms.entity.CmsImgPosition">
	    UPDATE cms_img_position 
		<include refid="updateset"/>
        WHERE 
	        position_id = #{positionId} 
	</update>
	
</mapper>

